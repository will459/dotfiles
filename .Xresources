! behaviour
URxvt.termName:             xterm-256color
URxvt.loginshell:           true
URxvt.scrollTtyOutput:      false
URxvt.scrollWithBuffer:     true
URxvt.scrollTtyKeypress:    true
URxvt.secondaryScreen:      1
URxvt.secondaryScroll:      0
URxvt.scrollBar:            false
URxvt.saveLines:            1200
URxvt.perl-ext-common:      default,clipboard
URxvt.clipboard.autocopy:   true
URxvt.keysym.M-c:           perl:clipboard:copy
URxvt.keysym.M-v:           perl:clipboard:paste

! themes

*.font:                     xft:JetBrainsMono:size=11,xft:Symbola:size=11
*.boldFont:                 xft:JetBrainsMono:style=Bold:size=11,xft:Symbola:size=11
*.italicFont:               xft:JetBrainsMono:style=Italic:size=11,xft:Symbola:size=11
*.boldItalicFont:           xft:JetBrainsMono:style=Bold Italic:size=11,xft:Symbola:size=11


! ROFI specific
rofi.width:                 40
rofi.lines:                 8
rofi.columns:               1
!rofi.font:                  JetBrains Mono 16
rofi.location:              0
rofi.bw:                    0
rofi.padding:               0
rofi.yoffset:               -100
rofi.fixed-num-lines:       false
rofi.terminal:              urxvt
rofi.matching:              fuzzy
rofi.scroll-method:         1

! special
*.foreground:               #c5c8c6
*.background:               #1d1f21
*.cursorColor:              #c5c8c6

! black
*.color0:                   #282a2e
*.color8:                   #373b41

! red
*.color1:                   #a54242
*.color9:                   #cc6666

! green
*.color2:                   #8c9440
*.color10:                  #b5bd68

! yellow
*.color3:                   #de935f
*.color11:                  #f0c674

! blue
*.color4:                   #5f819d
*.color12:                  #81a2be

! magenta
*.color5:                   #85678f
*.color13:                  #b294bb

! cyan
*.color6:                   #5e8d87
*.color14:                  #8abeb7

! white
*.color7:                   #707880
*.color15:                  #c5c8c6

